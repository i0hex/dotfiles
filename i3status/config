# i3status configuration file.
# see "man i3status" for documentation.
general {
		output_format = "i3bar"
		separator = ""
        colors = true
        interval = 5
}

order += "cpu_usage"
order += "cpu_temperature 0"
order += "memory"
order += "wireless wlp1s0"
order += "battery 0"
order += "volume master"
order += "disk /"
order += "disk /home"
order += "load"
order += "tztime local"

cpu_usage {
	format = "[IDLE %usage]"
	max_threshold = 75
	format_above_threshold = "[BUSY %usage]"
	degraded_threshold = 25
	format_above_degraded_threshold = "[WORK %usage]"
}

cpu_temperature 0 {
	format = "[%degrees°C]"
	max_threshold = 64
	format_above_threshold = "[HOT %degrees°C]"
}

wireless wlp1s0 {
	format_up = "[%essid(%quality)]"
	format_down = "WLAN"
}

ethernet enp3s0 {
	format_up = "[%ip(%speed)]"
	format_down = "Ethernet"
}

battery 0 {
	format = "[%status %percentage]"
	format_down = "[No battery]"
	path = "/sys/class/power_supply/BAT0/uevent"
	threshold_type = "percentage"
	integer_battery_capacity = true
	low_threshold = 20
	last_full_capacity = true
}

volume master {
	format = "[%devicename %volume]"
	format_muted = "[%devicename(muted) %volume]"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}


disk "/" {
	format = "[%total(%percentage_used)]"
	prefix_type = "custom"
	low_threshold = 5
	threshold_type = percentage_free
	format_below_threshold = "[LOW %total(%percentage_used)]"
}

disk "/home" {
	format = "[%total(%percentage_used)]"
	prefix_type = "custom"
	low_threshold = 5
	threshold_type = percentage_free
	format_below_threshold = "[LOW %total(%percentage_used)]"
}

load {
	format = "[%5min]"
}

memory {
	format = "[%total(%percentage_used)]"
	threshold_degraded = "1G"
	format_degraded = "[LOW %total(%percentage_used)]"
}

tztime local {
	#format = "%Y-%m-%d %H:%M"
	format = "[%a %b %d %H:%M]"
}
