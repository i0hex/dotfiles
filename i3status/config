# i3status configuration file.
# see "man i3status" for documentation.
general {
  output_format = "i3bar"
  colors = true
  interval = 6
}

order += "wireless wlp1s0"
order += "cpu_usage"
order += "cpu_temperature 0"
# order += "memory"
order += "volume master"
order += "battery 0"
# order += "load"
order += "tztime local"

cpu_usage {
  format = "U:%usage"
  degraded_threshold = 25
  format_above_degraded_threshold = "U:%usage"
  max_threshold = 75
  format_above_threshold = "U:%usage"
}

cpu_temperature 0 {
  format = "T:%degrees°C"
  max_threshold = 64
  format_above_threshold = "T:%degrees°C"
}

wireless wlp1s0 {
  format_up = "W:%essid"
  format_down = "WLAN"
}

ethernet enp3s0 {
  format_up = "E:%ip"
  format_down = "ETHERNET"
}

battery 0 {
  format = "B:%percentage"
  format_down = "NO BATTERY"
  path = "/sys/class/power_supply/BAT0/uevent"
  threshold_type = "percentage"
  integer_battery_capacity = true
  low_threshold = 20
  last_full_capacity = true
}

volume master {
  format = "V(%devicename):%volume"
  format_muted = "V(%devicename):%volume(muted)"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}

load {
  format = "%5min"
}

memory {
  format = "M:%used/%total"
  threshold_degraded = "1G"
  format_degraded = "M:%used/%total"
}

tztime local {
  #format = "%Y-%m-%d %H:%M"
  format = "%a %b %d %H:%M"
}
